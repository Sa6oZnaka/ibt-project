<!DOCTYPE html>
<html>
   <head>
      <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
      <link href='https://fonts.googleapis.com/css?family=Open+Sans:700,600' rel='stylesheet' type='text/css'>
      <meta charset="utf-8">
      <title>IBT Web store</title>
   </head>
   <body>
      <%- include('_navbar.ejs') %>
      <div class="mx-auto" style="width: 1200px; padding-top: 10px;">
         <div class="d-flex1 justify-content-center">
            <ul class="list-group">
               <% for(let i = 0; i < items.length; i++) {%>
               <li class="list-group-item d-flex justify-content-between align-items-center">
                  <%= items[i].name %>
                  <% if(items[i].statusId == 1){ %>
                  <span class="badge badge-primary badge-pill"><%= items[i].status %></span>
                  <% } %>
                  <% if(items[i].statusId == 2){ %>
                  <span class="badge badge-success badge-pill"><%= items[i].status %></span>
                  <% } %>
                  <% if(items[i].statusId == 3){ %>
                  <span class="badge badge-danger badge-pill"><%= items[i].status %></span>
                  <% } %>
                  <% if(items[i].statusId == 4){ %>
                  <span class="badge badge-secondary badge-pill"><%= items[i].status %></span>
                  <% } %>
               </li>
               <% } %>
            </ul>
         </div>
      </div>
   </body>
</html>