<!DOCTYPE html>

<html>
    <head>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
        <link href='https://fonts.googleapis.com/css?family=Open+Sans:700,600' rel='stylesheet' type='text/css'>

        <meta charset="utf-8">
        <title>IBT Web store</title>
    </head>

    <body>

        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <a class="navbar-brand" href="#">Web store</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>
          
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
              <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                  <a class="nav-link" href="/">Home</a>
                </li>
                <li class="nav-item active">
                  <a class="nav-link" href="#">Orders<span class="sr-only">(current)</span></a>
                </li>
                <% if(user.isAdmin){ %>
                    <li class="nav-item">
                      <a class="nav-link" href="allOrders">All Orders</a>
                    </li>
                  <% } %>
            </ul>

              <ul class="navbar-nav mr-right">
                <li class="nav-item">
                    <a class="nav-link disabled" href="#"><%= user.username %></a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" href="logout">Logout</a>
                </li>

              </ul>

            </div>
          </nav>

        <div class="mx-auto" style="width: 1200px;">
        <div class="d-flex1 justify-content-center">

        <table class="table">
            <thead>
                <tr>
                  <th scope="col">#</th>
                  <th scope="col">Име</th>
                  <th scope="col">Поръчал</th>
                  <th scope="col">Статус</th>
                  <th scope="col">Действия</th>
                </tr>
              </thead>
              <tbody>
            <% for(let i = 0; i < items.length; i++) {%>
                <tr>
                    <td><%= items[i].id %></td>
                    <td><%= items[i].name %></td>
                    <td><%= items[i].orderedBy %></td>
                    <td><%= items[i].status %></td>

                    <td>
                        <% if(items[i].statusId == 1){ %>
                            <a class="btn btn-success" href="/setOrderStatus/<%= items[i].id %>/2" role="button">Одобри</a>
                            <a class="btn btn-danger" href="/setOrderStatus/<%= items[i].id %>/3" role="button">Откажи</a>
                        <% } %>

                        <% if(items[i].statusId == 2){ %>
                            <a class="btn btn-primary" href="/setOrderStatus/<%= items[i].id %>/4" role="button">Завърши</a>
                        <% } %>
                    </td>
                    
                  </tr>
            <% } %>
        </table>

      </div>
    </div>


        
    </body>

</html>
